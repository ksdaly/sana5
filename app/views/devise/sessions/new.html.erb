<div class="outer-container" id="blank">
  <div class="container">
    <div class="signin-form">

      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :required => false, :autofocus => true, label: false, placeholder: "Email" %>
          <%= f.input :password, :required => false, label: false, placeholder: "Password"  %>
         <%= f.input :remember_me,label_html: {class: 'todo'}, input_html: {class: 'toggle'}, :as => :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign in" %>
        </div>
      <% end %>
      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


