
<div class="gn-container">
  <ul id="gn-menu" class="gn-menu-main">
<% if user_signed_in? && current_user.health_plan.present?%>
    <li class="gn-trigger">
      <a class="gn-icon gn-icon-menu"><span>Menu</span></a>
      <nav class="gn-menu-wrapper">
        <div class="gn-scroller">
          <ul class="gn-menu">
<!--             <li>
              <%= link_to root_path do %>
                <i class="gn-icon icon-home"></i>
                <span>Home</span>
              <% end %>
            </li> -->
            <li>
              <%= link_to health_profiles_path do %>
                <i class="gn-icon icon-dashboard"></i>
                <span>Dashboard</span>
              <% end %>
            </li>
            <li>
              <%= link_to user_health_plan_path(current_user.user_health_plan) do %>
                <i class="gn-icon icon-medkit"></i>
                <span>Health Plan</span>
              <% end %>
            </li>
            <li>
              <%= link_to edit_health_profile_path(current_user.health_profiles.last) do %>
