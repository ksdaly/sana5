    <% if user_signed_in? %>
      <li> <%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
      <li class ="gn-username"><%= current_user.username %></li>
    <% else %>
      <li class="gn-logo">Sana</li>
      <li class="gn-login"><%= link_to "Login", new_user_session_path %></li>
      <% end %>

  </ul>
