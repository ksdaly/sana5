<div class="container">
  <ul id="gn-menu" class="gn-menu-main">
    <% if user_signed_in? %>
    <li class="gn-trigger">
      <a class="gn-icon gn-icon-menu"><span>Menu</span></a>
      <nav class="gn-menu-wrapper">
        <div class="gn-scroller">
          <ul class="gn-menu">
            <li>
              <%= link_to root_path do %>
                <i class="gn-icon icon-home"></i>
                <span>Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to health_profiles_path do %>
                <i class="gn-icon icon-dashboard"></i>
                <span>Dashboard</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_health_plan_path do %>
                <i class="gn-icon icon-stethoscope"></i>
                <span>Health Plan</span>
              <% end %>
            </li>
            <li>
              <%= link_to edit_health_profile_path(current_user.health_profiles.last) do %>
                <i class="gn-icon icon-edit"></i>
                <span>Update Health Profile</span>
              <% end %>
            </li>
            <li>
              <%= link_to user_to_dos_path do %>
                <i class="gn-icon icon-ok"></i>
                <span>Daily Checklist</span>
              <% end %>
            </li>
          </ul>
        </div><!-- /gn-scroller -->

      </nav>
    </li>
    <% end %>
    <% if user_signed_in? %>
      <li> <%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
      <li class ="gn-username"><%= current_user.username %></li>
    <% else %>
      <li><%= link_to "Sign up", new_user_registration_path %></li>
      <li><%= link_to "Login", new_user_session_path %></li>
      <% end %>
  </ul>
</div><!-- /container -->
